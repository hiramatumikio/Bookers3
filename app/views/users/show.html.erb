<%= render 'users/list', book: @book, user: @user %>

<div class="col-xs-9">

<div class="d-flex align-items-center">
  <h2>Books</h2>
  <table class="table table-bordered bordr-primary table-hover table-sm books_table">
    <thead class="thead-dark">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tbody>
    <% end %>
  </table>
</div>
</div>
