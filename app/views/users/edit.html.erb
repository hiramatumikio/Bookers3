 <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
  <p>error</p>
    <%= error %>
  <% end %>
<% end %>


<%= form_for current_user do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form-group has-icon">
  <div class="user-edit-image">
  <%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, format:'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  </div>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>


<div class="field">
  <%= f.label :introduction %>Introduction
  <%= f.text_field :introduction %>
</div>

<div class="actions">
<%= f.submit "Update User" %>
</div>
<% end %>