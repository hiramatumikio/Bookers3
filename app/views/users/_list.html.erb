<div class="profile-container">
  <div class="col-xs-3">
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |error| %>
  <p>error</p>
    <%= error %>
  <% end %>
<% end %>
<h2>User info</h2>
  <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
  <th class="profile-name"><%= user.name %></th>
      </tr>
      <tr>
        <th class="profile-name">introduction<%= user.introduction %></th>
        <th></th>
      </tr>
    </tbody>
  </table>

  <% if user == current_user %>
  <p><%= link_to "", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_9407" %></p>
  <% end %>

 <div class="-">

<h2>New book</h2>
<%= form_for book do |f| %>

  <div class="field row">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <%= f.label :text, "Opinion" %>
    <%= f.text_area :body, cols: 30, rows: 8 %>
  </div>

  <div class="actions row">
   <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
  </div>

  <% end %>
</div>
</div>
</div>