<div class="profile-container">
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |error| %>
  <p>error</p>
    <%= error %>
  <% end %>
<% end %>
  <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format:'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <h3 class="profile-name"><%= user.name %></h3>
  <h3 class="profile-name"><%= user.introduction %></h3>

  <% if user == current_user %>
  <p><%= link_to "プロフィール", edit_user_path(user.id)%></p>
  <% end %>

<h2>User info</h2>
 <div class="-">

<h2>New book</h2>
<%= form_for book do |f| %>

  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </p>

  <P>
    <%= f.label :text, "Opinion" %>
    <%= f.text_area :body, cols: 60, rows: 8 %>
  </P>

  <p>
    <%= f.submit %>
  </p>

  <% end %>