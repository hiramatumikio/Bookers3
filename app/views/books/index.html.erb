<%= render 'users/list', book: @book, user: current_user %>
<h1>book/index</h1>

<div class="d-flex align-items-center">
  <% if flash[:notice] %>
    <div class="flash">
    </div>
  <% end %>
  <h2>Books</h2>
  <table class="table table-bordered bordr-primary table-hover table-sm books_table">
    <thead class="thead-dark">
      <tr>
        <tr scope=></tr>
        <tr scope="col">Title</tr>
        <tr scope="col">Opinion</tr>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      <% end %>
      </tr>
    </tbody>
  </table>