<%= render 'users/list', book: @book, user: current_user %>
<div class="col-xs-9">
<h1>book/index</h1>

<div class="d-flex align-items-center">
  <% if flash[:notice] %>
    <div class="flash">
    </div>
  <% end %>
  <h2>Books</h2>
  <table class="table table-bordered bordr-primary table-hover table-sm books_table">
    <thead class="thead-dark">
      <tr>
        <th scope=></th>
        <th scope="col">Title</th>
        <th scope="col">Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>